    "@rollup/plugin-replace": "^2.3.4",
    "@types/hash-sum": "^1.0.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.4.7",
    "@types/puppeteer": "^5.0.0",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.7.0",
    "execa": "^4.0.2",
    "fs-extra": "^9.0.1",
    "jest": "^27.1.0",
